<%= simple_form_for(@link, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: false, collection: ['LinkedIn', 'Github', 'Website', 'Behance', 'Other'], prompt: 'Choose link type' %>
    <%= f.input :url, label: false, placeholder: "https://" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save link", class: 'btn btn-outline-primary' %>
  </div>
<% end %>
