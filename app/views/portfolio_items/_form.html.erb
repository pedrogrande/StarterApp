<%= simple_form_for(@portfolio_item, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title  %>
    <%= f.input :description %>
    <%= f.input :link %>
    <%= f.input :image %>
    <%= f.input :position %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save portfolio item", class: 'btn btn-primary' %>
  </div>
<% end %>
