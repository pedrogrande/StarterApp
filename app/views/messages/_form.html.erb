<h4>Message to: <%= @receiver.name %></h4>
<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :receiver_id, as: :hidden, input_html: { value: @receiver.id } %>
    <%= f.input :subject, input_html: { value: "Hi there. I'm interested in working with you."} %>
    <%= f.input :message, label: false, placeholder: 'Enter your message.', input_html: { rows: 5 } %>
  </div>

  <div class="form-actions">
    <%= f.submit "Send message", class: 'btn btn-outline-danger btn-lg' %>
  </div>
<% end %>
