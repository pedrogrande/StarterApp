<div class="container">

  <h1>Inbox</h1>
  <%= link_to 'New Message', new_message_path, class: 'btn btn-outline-success btn-sm' %>
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>From</th>
        <th>Subject</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @messages.each do |message| %>
        <tr class="<%= message.is_read ? '' : 'table-success' %>">
          <td><%= User.find(message.sender_id).name %></td>
          <td><%= link_to message.subject, message %></td>
          <td><%= link_to '<i class="fa fa-trash"></i>'.html_safe, message, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>



</div>
