<%= simple_form_for(@proposal) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :gig_id, as: :hidden, input_html: { value: @gig.id } %>
    <%= f.input :content, label: "Why should you be awarded this gig?", input_html: { rows: 5} %>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit proposal", class: 'btn btn-primary' %>
  </div>
<% end %>
<br><br>
